extends layout
block head
    link(rel='stylesheet', href='/stylesheets/question.css')
    script(type="text/javascript" src="/plugins/syntaxhighlighter_3.0.83/scripts/shCore.js")
    script(type="text/javascript" src="/plugins/syntaxhighlighter_3.0.83/scripts/shBrushJava.js")
    link(href="/plugins/syntaxhighlighter_3.0.83/styles/shCore.css" rel="stylesheet" type="text/css")
    link(href="/plugins/syntaxhighlighter_3.0.83/styles/shThemeEclipse.css" rel="stylesheet" type="text/css")
block content
    div.top
        if qnum
            div.qnum= qnum +"."
                label.id= id
            div.details
                div.title= title
                div.test= "Test " + test
        else
            div.qnum= "Random"
                label.id= id
    span.leftcol
        pre.question.code(class="brush: java")= question
        //div.question.code= question
        form.submit(name="checkquestion",method="post",action="/checkquestion")
            label(for='A')
                input#A(type="radio",name="choice",value="A")
                |#{A}
            label(for='B')
                input#B(type="radio",name="choice",value="B")
                |#{B}
            label(for='C')
                input#C(type="radio",name="choice",value="C")
                |#{C}
            label(for='D')
                input#D(type="radio",name="choice",value="D")
                |#{D}
            label(for='E')
                input#E(type="radio",name="choice",value="E")
                |#{E}
            input(type="hidden",name = "id", value= id)
            br
            button.next(type="submit") submit
    span.rightcol
        if side
            pre.question.side(class="brush: java")= side
block footer
    script(src="/scripts/keys.js")
    script.
        SyntaxHighlighter.all()
