extends layout
block head
    link(rel='stylesheet', href='/stylesheets/question.css')
    script(src="../ace-builds/src-noconflict/ace.js")
block content
    div.top
        if qnum
            div.qnum= qnum +"."
                label.id= id
            div.details
                div.title= title
                div.test= "Test " + test
        else
            div.qnum= "Random"
                label.id= id
    span.leftcol
        pre.question.code(id="qq")= question
        form.submit(name="checkquestion",method="post",action="/checkquestion")
            label#AL(for='A')
                input#A(type="radio",name="choice",value="A")
                |#{A}
            label#BL(for='B')
                input#B(type="radio",name="choice",value="B")
                |#{B}
            label#CL(for='C')
                input#C(type="radio",name="choice",value="C")
                |#{C}
            label#DL(for='D')
                input#D(type="radio",name="choice",value="D")
                |#{D}
            label#EL(for='E')
                input#E(type="radio",name="choice",value="E")
                |#{E}
            input(type="hidden",name = "id", value= id)
            br
            button.next#sub submit
    span.rightcol
        if side
            pre.question.side(id="cc")= side
block footer
    script.                                                 
        var themeq ="#{themeq}";
        var themec ="#{themec}";
        var key ="#{key}";
    script(src="/scripts/questiondisp.js")
    script(src="/scripts/keys.js")
    script.  
        $(document).ready(function(){
            $('#sub').click(function(){
                $('#AL').css('background-color','#EEEEEE');
                $('#BL').css('background-color','#EEEEEE');
                $('#CL').css('background-color','#EEEEEE');
                $('#DL').css('background-color','#EEEEEE');
                $('#EL').css('background-color','#EEEEEE');
                if(key===$("input[name=choice]:checked").val())
                    $('#'+$("input[name=choice]:checked").val()+'L').css('background-color','green');
                else
                    $('#'+$("input[name=choice]:checked").val()+'L').css('background-color','red');
            });
        });