doctype html
html
  head
    title= title
    link(href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Codystar' rel='stylesheet' type='text/css')
    link(rel='stylesheet', href='/stylesheets/navbar.css')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
    block head
  body
    ul.navbar
        a(href="/")
            li.nav.left
                |LASA UIL Training
        if cookie
            a(href="/random")
                li.nav.left
                    img.random(src='/images/random.png')
            a(href="/logout")
                li.nav.button.right
                    |Logout
            a(href="/home")
                li.nav.button.right
                    |Home
                
        else
            a(href="/newuser")
                li.nav.button.right
                    |Register
            a(href="/signin")
                li.nav.button.right
                    |Login
            
    div.content
        block content
    div.footer
        block footer
