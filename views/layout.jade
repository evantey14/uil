doctype html
html
  head
    title= title
    link(href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Codystar' rel='stylesheet' type='text/css')
    link(rel='stylesheet', href='/stylesheets/icons.css')
    link(rel='stylesheet', href='/stylesheets/navbar.css')
    link(rel='stylesheet', href='/plugins/font-awesome-4.0.3/css/font-awesome.min.css')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
    block head
  body
    ul.navbar
        a(href="/")
            li.nav.button.left
                |LASA UIL Training
        a(href="/about")
            li.nav.left
                |About
        if cookie
            //a(href="/home")
            a(href="/random")
                li.nav.button.left
                    img.ico(src='/images/random.png')
            label(for="dropdown").nav.right= session.user
            input(type="checkbox")#dropdown
            .drop
                a(href="/home")
                    div
                        i.fa.fa-user
                        span="Profile"
                a(href="/graph")
                    div
                        i.fa.fa-bar-chart-o
                        span="Graph"
                a(href="/settings")
                    div
                        i.fa.fa-gear
                        span="Settings"
                a(href="/logout")
                    div
                        i.fa.fa-sign-out
                        span="Logout"
        else
            a(href="/newuser")
                li.nav.button.right
                    |Register
            a(href="/signin")
                li.nav.button.right
                    |Login

    div.content
        block content
    div.footer
        block footer
