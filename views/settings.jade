extends layout
block head
    link(rel='stylesheet', href='/stylesheets/settings.css')
block content
    if(prompt)
         div.title= prompt
    div.title= "Question Theme"
    form.submit(name="newqth",method="post",action="/settings")
            label(for='A')
                input#A(type="radio",name="qchoice",value="terminal")
                |terminal
            label(for='B')
                input#B(type="radio",name="qchoice",value="textMate")
                |textMate
            label(for='C')
                input#C(type="radio",name="qchoice",value="twilight")
                |twilight
            label(for='D')
                input#D(type="radio",name="qchoice",value="monokai")
                |monokai
            label(for='E')
                input#E(type="radio",name="qchoice",value="eclipse")
                |eclipse
            label(for='F')
                input#F(type="radio",name="qchoice",value="textMate")
                |textMate
            label(for='G')
                input#G(type="radio",name="qchoice",value="xcode")
                |xcode
            label(for='H')
                input#H(type="radio",name="qchoice",value="chrome")
                |chrome
            br
            button.next(type="submit") submit
    div.title= "Code Theme"
    form.submit(name="newcth",method="post",action="/settings")
            label(for='At')
                input#At(type="radio",name="cchoice",value="terminal")
                |terminal
            label(for='Bt')
                input#Bt(type="radio",name="cchoice",value="textMate")
                |textMate
            label(for='Ct')
                input#Ct(type="radio",name="cchoice",value="twilight")
                |twilight
            label(for='Dt')
                input#Dt(type="radio",name="cchoice",value="monokai")
                |monokai
            label(for='Et')
                input#Et(type="radio",name="cchoice",value="eclipse")
                |eclipse
            label(for='Ft')
                input#Ft(type="radio",name="cchoice",value="textMate")
                |textMate
            label(for='Gt')
                input#Gt(type="radio",name="cchoice",value="xcode")
                |xcode
            label(for='Ht')
                input#Ht(type="radio",name="cchoice",value="chrome")
                |chrome
            br
            button.next(type="submit") submit
